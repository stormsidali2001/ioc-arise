---
import type { Props } from "@astrojs/starlight/props";
import logoLight from "../assets/logoLight.svg";
import logoDark from "../assets/logoDark.svg";
---

<a
	href="/"
	class="site-title-wrapper flex flex-row items-center no-underline text-inherit group"
>
	<div class="logo-container relative">
		<img
			src={logoDark.src}
			alt="IoC Arise Logo"
			class="logo-dark w-12 h-12 rounded-lg transition-all duration-300 group-hover:scale-105 group-hover:rotate-3"
		/>
		<img
			src={logoLight.src}
			alt="IoC Arise Logo"
			class="logo-light w-12 h-12 rounded-lg transition-all duration-300 group-hover:scale-105 group-hover:rotate-3"
		/>
		<!-- Glow effect on hover -->
		<div
			class="absolute inset-0 rounded-lg bg-gradient-to-br from-purple-500/0 to-purple-600/0 group-hover:from-purple-500/20 group-hover:to-purple-600/20 transition-all duration-300 -z-10 blur-sm"
		>
		</div>
	</div>
	<div class="flex items-center ml-3 gap-2">
		<span
			class="text-xl font-bold bg-gradient-to-r from-purple-400 to-purple-600 bg-clip-text text-transparent group-hover:from-purple-300 group-hover:to-purple-500 transition-all duration-300"
		>
			IoC Arise
		</span>
		<span
			class="px-2 py-0.5 text-[10px] font-semibold rounded-full border border-purple-500/30 bg-purple-500/10 transition-all duration-300 group-hover:border-purple-400/50 group-hover:bg-purple-400/20"
			style="color: var(--sl-color-accent-high);"
		>
			v1.1
		</span>
	</div>
</a>

<style>
	.site-title-wrapper {
		position: relative;
		padding: 0.5rem;
		border-radius: 0.75rem;
		transition: all 0.3s ease;
	}

	.site-title-wrapper:hover {
		background: rgba(124, 58, 237, 0.05);
	}

	.logo-container {
		position: relative;
		width: 3rem;
		height: 3rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.logo-container img {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	/* Show dark logo in dark theme, hide light logo */
	:global(html[data-theme="dark"]) .logo-dark,
	:global(html:not([data-theme])) .logo-dark {
		display: block;
	}

	:global(html[data-theme="dark"]) .logo-light,
	:global(html:not([data-theme])) .logo-light {
		display: none;
	}

	/* Show light logo in light theme, hide dark logo */
	:global(html[data-theme="light"]) .logo-light {
		display: block;
	}

	:global(html[data-theme="light"]) .logo-dark {
		display: none;
	}

	/* Subtle pulse animation for logo */
	@keyframes subtle-pulse {
		0%,
		100% {
			opacity: 1;
		}
		50% {
			opacity: 0.8;
		}
	}

	.site-title-wrapper:hover .logo-container::before {
		content: "";
		position: absolute;
		inset: -4px;
		border-radius: 0.75rem;
		background: linear-gradient(
			135deg,
			rgba(124, 58, 237, 0.1),
			rgba(168, 85, 247, 0.1)
		);
		animation: subtle-pulse 2s ease-in-out infinite;
		z-index: -1;
	}
</style>
